<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlr_static_date_layout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:background="@color/Red">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/rlr_output_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="10"
                        android:textColor="@color/White"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/rlr_output_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jan"
                        android:textColor="@color/White"
                        android:textSize="28sp" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/rlr_output_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/rlr_static_date_layout"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="Report Title"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Description"
                android:textSize="12sp"
                android:layout_below="@+id/rlr_output_title"
                android:layout_toEndOf="@+id/rlr_static_date_layout"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:id="@+id/rlr_output_description"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@color/Yellow"
                android:text="Approved"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/rlr_output_status"
                android:gravity="center"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>